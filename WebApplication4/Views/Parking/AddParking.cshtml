@model WebApplication4.Models.Parking


<div id="container">
    <div class="row">
        <div class="col-sm-offset-4 col-sm-4">
            <div class="row well">
                @using (Html.BeginForm("Create", "Parking", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    //<form class="form-horizontal" method="post" asp-controller="AccountController" asp-action="CreateAccount">
                    if (!String.IsNullOrEmpty(ViewBag.errorMessage))
                    {
                        <div class="text-danger">
                            @ViewBag.errorMessage
                        </div>
                    }
                    if (TempData["Success"] != null)
                    {
                        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
                    }


                    <fieldset>
                        <legend>Add Parking</legend>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ParkingNumber, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.ParkingNumber, new {htmlAttributes= new { @class = "form-control", @type = "text" } })
                                @Html.ValidationMessageFor(model => model.ParkingNumber)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Level, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Level, new { htmlAttributes = new { @class = "form-control", @type = "number" } })

                                @Html.ValidationMessageFor(model => model.Level)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Asiel, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Asiel, new { htmlAttributes=new { @class = "form-control", @type = "text" } })
                                @Html.ValidationMessageFor(model => model.Asiel)

                            </div>s
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.BuildingNumber, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.BuildingNumber, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0" } })
                                @Html.ValidationMessageFor(model => model.BuildingNumber)

                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model=>model.Price, new { @class= "col-sm-4 control-label"})
                            <div class="col-sm-8">
                                @Html.EditorFor(model=>model.Price, new { htmlAttributes = new { @class = "form-control" } })
                                </div>

                            </div>
                       
                        <div id="lower">
                            <div class="form-group">
                                <div class="col-sm-8 col-sm-offset-4">
                                    <button type="submit" class="btn btn-primary">Add</button>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
