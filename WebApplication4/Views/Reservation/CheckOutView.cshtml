@model WebApplication4.Models.CheckOutViewModel
<div class="row">
    <div class="col-sm-offset-4 col-sm-4">
        <div class="row well">
            @using (Html.BeginForm("AddReservation", "Reservation", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                //<form class="form-horizontal" method="post" asp-controller="AccountController" asp-action="CreateAccount">
                if (!String.IsNullOrEmpty(ViewBag.errorMessage))
                {
                    <div class="text-danger">
                        @ViewBag.errorMessage
                    </div>
                }
                if (TempData["Success"] != null)
                {
                    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
                }


                <fieldset>
                    <legend>Billing Address Delait</legend>

                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.Acc.FirstName, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.Acc.FirstName, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                            @Html.ValidationMessageFor(model => model.Acc.FirstName)

                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Acc.LastName, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.Acc.LastName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Acc.LastName)
                        </div>

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address.HouseNO, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.Address.HouseNO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Address.HouseNO)
                        </div>

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address.Street, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.Address.Street, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Address.Street)
                        </div>

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address.City, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.Address.City, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Address.City)
                        </div>

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address.province, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.Address.province, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Address.province)
                        </div>

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address.PostalCode, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.Address.PostalCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Address.PostalCode)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>

                    </div>
                    <div class="row well">
                        <fieldset>
                        <legend>Vehicle Information</legend>
                            <div class="form-group">
                                @Html.LabelFor(model => model.vehicle.VehicleNO, new { @class = "col-sm-4 control-label" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.vehicle.VehicleNO, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.vehicle.VehicleNO)
                                </div>

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.vehicle.Made, new { @class = "col-sm-4 control-label" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.vehicle.Made, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.vehicle.Made)
                                </div>

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.vehicle.Model, new { @class = "col-sm-4 control-label" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.vehicle.Model, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.vehicle.Model)
                                </div>

                            </div>

                            </fieldset>
                        </div>


                    <div id="lower">
                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-4">
                                <button type="submit" class="btn btn-primary">Reserve and Pay</button>
                            </div>
                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>