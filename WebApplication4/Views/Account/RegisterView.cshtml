@model  WebApplication4.Models.Account



<div id="container">

    <form class="form-horizontal" method="post" asp-controller="AccountController" asp-action="CreateAccount">
        <div class="row">
            <div class="col-sm-offset-4 col-sm-4">
                <div class="row well" >
                    <fieldset>
                        <legend>Register</legend>
                        <div class="form-group">
                            <label for="emailinput" class="col-sm-4 control-label">Email</label>
                            <div class="col-sm-8">
                                <input asp-for="Email"  id="emailinput" class="form-control" placeholder="Email Address" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="passwordinput" class="col-sm-4 control-label">Password</label>
                            <div class="col-sm-8">
                                <input asp-for="Password"  id="paswordinput" class="form-control" placeholder="password" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="firstname" class="col-sm-4 control-label">First Name</label>
                            <div class="col-sm-8">
                                <input asp-for="FirstName"   id="firstname" class="form-control" placeholder="First Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="lastname"  class="col-sm-4 control-label">Last Name</label>
                            <div class="col-sm-8">
                                <input asp-for="LastName" id="lastname" class="form-control" placeholder="Last Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="phone" class="col-sm-4 control-label">Phone Number</label>
                            <div class="col-sm-8">
                                <input  asp-fro="PhoneNumber" id="phone" class="form-control" placeholder="Phone Number">
                            </div>
                        </div>
                        <div id="lower">
                            <div class="form-group">
                                <div class="col-sm-8 col-sm-offset-4">
                                    <button type="submit" class="btn btn-primary">Create An Account</button>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>

    </form>

</div>
