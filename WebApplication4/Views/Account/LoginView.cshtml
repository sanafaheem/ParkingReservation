
@model WebApplication4.Models.LoginModel

<div class="row">
    <div class="col-sm-offset-4 col-sm-4">
        <div class="row well">
@using (Html.BeginForm("LogIn", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    //<form class="form-horizontal" style="border:3px solid #e6e6e6" method="post">

    <fieldset>
        <legend>Log In</legend>
       @{ if (!String.IsNullOrEmpty(ViewBag.errorMessage))
           {
        <div class="text-danger">
            @ViewBag.errorMessage
        </div>
               }
           }
        <div class="form-group">
            @Html.LabelFor(m=>m.Email ,new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8" >
                @Html.EditorFor( m=>m.Email, new { @class = "form-control"})
                @Html.ValidationMessageFor(m=>m.Email)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.Password, new{@class=" col-sm-4 control-label"})
            <div class="col-sm-8">
                @Html.EditorFor(m=>m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m=>m.Password)
                <span class="psw"><a href="#">Forgot password?</a></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> Remember me
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-10">
                <button type="submit" class="btn btn-primary">Sign In</button>
            </div>
        </div>
    </fieldset>
        }
    </div>
    </div>
    </div>

